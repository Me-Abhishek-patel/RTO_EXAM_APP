<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/QNoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectanglegreen"
        android:paddingLeft="16dp"

        android:text="1"
        android:textColor="@color/white" />

    <LinearLayout

        android:id="@+id/q_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container3"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/q_practice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="एक पैदल पारपथ के पास, जब पैदल चलनेवालेयाी सड़क पार करने का इंतजार कर रहेह, तब आपको ा करना
चाहए?"
            android:textColor="@color/black"
            android:textSize="@dimen/q_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/a_practice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="– वाहन रोककर तब तक तीा करनी चाहए जब तक क पदयाी पथ पार न कर ल।"

            android:textColor="@color/black"
            android:textSize="@dimen/q_text" />


    </LinearLayout>


</LinearLayout>